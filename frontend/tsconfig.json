{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "outDir": "../out/frontend/dist", // Specify the output directory for the compiled files
    "sourceMap": true, // Generate source map files (set to false to disable source map generation)
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    // ... other compiler options
  },
  "include": ["src"],
}
